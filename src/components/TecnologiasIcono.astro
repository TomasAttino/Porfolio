---
interface Props {
  name: string;
  icon?: string;
}

const { name, icon } = Astro.props;
---

<span class="rounded-full border border-white/10 bg-white/5 flex justify-center items-center gap-x-2 py-1 lg:py-2 px-2 lg:px-4 text-xs lg:text-base ng-white/5
        hover:scale-110 hover:bg-white/10 transition">
  {icon && (
    <img 
      src={icon} 
      alt={`${name} icon`}
      class="w-7 h-7 object-contain"
    />
  )}
  <span>{name}</span>
</span>