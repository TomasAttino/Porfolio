---
import Layout from '../layouts/Layout.astro';
import Badge from '../components/Badge.astro';
import Proyectos from '../components/Proyectos.astro';
import Materias from '../components/Materias.astro';
import SobreMi from '../components/SobreMi.astro';



import '../styles/global.css'

---

<Layout>
    <section class="w-full mx-auto lg:w-[740px] py-44 pb-10" id="inicio"> 
        
        <div class="flex-column gap-x-4 items-center mb-8">
            <img 
                class="rounded-full border-white border-4 w-50 h-50 mb-5 object-cover" 
                src="https://media.licdn.com/dms/image/v2/D4D03AQEcxXtgXGWBUw/profile-displayphoto-shrink_200_200/B4DZTcxh0xG8Ac-/0/1738870759159?e=2147483647&v=beta&t=2xE0kT2T8trInD47agZ5Dasdp8nRXiyBNJwuLluHeJI" 
                alt="tomas_attino_foto"
            />
            <h1 class="text-3xl md:text-4xl font-bold flex flex-col md:flex-row gap-x-4 pb-4 lg:pb-0">
                Hola, soy Tomas Attino! 
                <a 
                  href="https://linkedin.com/in/tomasattino" 
                  target="_blank" 
                  rel="noopener" 
                  class="flex justify-center items-center mt-2 md:mt-0"
                >
                    <Badge>Disponible para trabajar</Badge>
                </a>
            </h1>
        </div>
    
        <h2 class="text-xl lg:text-2xl opacity-80 text-wrap max-w-[520px]">
            <span>Estudiante de la <span class="text-green-300/90">Tecnicatura en Desarrollo Web</span>,</span>
            <span> en la Universidad Nacional de la Matanza.</span><br>
            <span> Estos son algunos de mis proyectos.</span>

            
            <div class="flex items-center gap-2 mt-2 text-blue-200/90">
                <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-map-pin" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M9 11a3 3 0 1 0 6 0a3 3 0 0 0 -6 0" /><path d="M17.657 16.657l-4.243 4.243a2 2 0 0 1 -2.827 0l-4.244 -4.243a8 8 0 1 1 11.314 0z" /></svg>
                Buenos Aires, Argentina
                <img 
                    class="w-5 h-auto rounded-sm shadow-sm" 
                    src="https://flagcdn.com/w40/ar.png" 
                    alt="Bandera de Argentina"
                />
            </div>
        </h2>

        <nav class="flex gap-4 mt-8 flex-wrap">
            
            <a href="https://www.linkedin.com/in/tomas-attino-b07839280" target="_blank" rel="noopener noreferrer"
               class="rounded-full border border-white/10 flex justify-center items-center gap-x-2 py-1 px-2 md:py-2 md:px-4 text-xs md:text-base bg-white/5 hover:scale-110 hover:bg-white/10 transition">
                <svg class="size-4 md:size-6" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M4 4m0 2a2 2 0 0 1 2 -2h12a2 2 0 0 1 2 2v12a2 2 0 0 1 -2 2h-12a2 2 0 0 1 -2 -2z" /><path d="M8 11l0 5" /><path d="M8 8l0 .01" /><path d="M12 16l0 -5" /><path d="M16 16v-3a2 2 0 0 0 -4 0" /></svg>
                LinkedIn
            </a>

            <a href="https://github.com/TomasAttino" target="_blank" rel="noopener noreferrer"
               class="rounded-full border border-white/10 flex justify-center items-center gap-x-2 py-1 px-2 md:py-2 md:px-4 text-xs md:text-base bg-white/5 hover:scale-110 hover:bg-white/10 transition">
                <svg class="size-4 md:size-6" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M9 19c-4.3 1.4 -4.3 -2.5 -6 -3m12 5v-3.5c0 -1 .1 -1.4 -.5 -2c2.8 -.3 5.5 -1.4 5.5 -6a4.6 4.6 0 0 0 -1.3 -3.2a4.2 4.2 0 0 0 -.1 -3.2s-1.1 -.3 -3.5 1.3a12.3 12.3 0 0 0 -6.2 0c-2.4 -1.6 -3.5 -1.3 -3.5 -1.3a4.2 4.2 0 0 0 -.1 3.2a4.6 4.6 0 0 0 -1.3 3.2c0 4.6 2.7 5.7 5.5 6c-.6 .6 -.6 1.2 -.5 2v3.5" /></svg>
                GitHub
            </a>

            <a href="mailto:tomas.attino@gmail.com?subject=Contacto porfolio" target="_blank" rel="noopener noreferrer"
               class="rounded-full border border-white/10 flex justify-center items-center gap-x-2 py-1 px-2 md:py-2 md:px-4 text-xs md:text-base bg-white/5 hover:scale-110 hover:bg-white/10 transition">
                <svg class="size-4 md:size-6" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect width="20" height="16" x="2" y="4" rx="2"/><path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"/></svg>
				tomasattino@gmail.com
			</a>

        </nav>

    </section>
	<section class="w-full mx-auto lg:w-[740px] py-0 pb-10" id="Proyectos"> 
        
        <div class="flex flex-row grid-cols-1 gap-x-2 items-center mb-4">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="icon icon-tabler icons-tabler-outline icon-tabler-briefcase"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M3 7m0 2a2 2 0 0 1 2 -2h14a2 2 0 0 1 2 2v9a2 2 0 0 1 -2 2h-14a2 2 0 0 1 -2 -2z" /><path d="M8 7v-2a2 2 0 0 1 2 -2h4a2 2 0 0 1 2 2v2" /><path d="M12 12l0 .01" /><path d="M3 13a20 20 0 0 0 18 0" /></svg>
            <h2 class="text-[25px]">Proyectos Universitarios</h2>

        </div>

        <Proyectos />
    </section>

    <section class="w-full mx-auto lg:w-[740px] py-0 pb-10" id="progreso">
        <div class="flex flex-row grid-cols-1 gap-x-2 items-center mb-4">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" stroke="#ffffff"><g id="SVGRepo_bgCarrier" stroke-width="0"></g><g id="SVGRepo_tracerCarrier" stroke-linecap="round" stroke-linejoin="round"></g><g id="SVGRepo_iconCarrier"> <path d="M5 8V17.0192M9 8V17M15 8V17M19 8V17.0192M5 17.0192C5.31428 17 5.70173 17 6.2 17H17.8C18.2983 17 18.6857 17 19 17.0192M5 17.0192C4.60779 17.0431 4.32953 17.097 4.09202 17.218C3.71569 17.4097 3.40973 17.7157 3.21799 18.092C3 18.5198 3 19.0799 3 20.2V21H21V20.2C21 19.0799 21 18.5198 20.782 18.092C20.5903 17.7157 20.2843 17.4097 19.908 17.218C19.6705 17.097 19.3922 17.0431 19 17.0192M3 5.5V8H21V5.5L12 3L3 5.5Z" stroke="#ffffff" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"></path> </g></svg>
            <h2 class="text-[25px]">Materias Cursadas</h2>
        </div>
        <Materias />
    </section>

    <section class="w-full mx-auto lg:w-[740px] py-0 pb-10" id="sobreMi">

        <SobreMi />
    </section>

</Layout>
